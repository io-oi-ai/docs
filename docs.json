{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Web2MD",
  "colors": {
    "primary": "#8b7355",
    "light": "#a68b6a",
    "dark": "#6b5a45"
  },
  "appearance": {
    "default": "dark",
    "strict": false
  },
  "font": {
    "body": {
      "family": "Inter"
    },
    "headings": {
      "family": "Georgia"
    }
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "dark": "#141a14",
      "light": "#f5f3ef"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/convert",
              "features/send-to-ai",
              "features/batch-convert",
              "features/preview-card",
              "features/context-menu"
            ]
          },
          {
            "group": "Advanced",
            "pages": [
              "advanced/prompt-templates",
              "advanced/site-adapters",
              "advanced/obsidian",
              "advanced/settings"
            ]
          },
          {
            "group": "Plans",
            "pages": [
              "plans"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Chrome Web Store",
          "href": "https://chromewebstore.google.com/detail/web2md-web-to-markdown/ijmgpkkfgpijifldbjafjiapehppcbcn",
          "icon": "chrome"
        },
        {
          "anchor": "Website",
          "href": "https://web2md.org",
          "icon": "globe"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:nicewuxi@gmail.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Install Extension",
      "href": "https://chromewebstore.google.com/detail/web2md-web-to-markdown/ijmgpkkfgpijifldbjafjiapehppcbcn"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/nicewuxi",
      "github": "https://github.com/nicewuxi"
    }
  }
}
